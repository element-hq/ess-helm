{
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean"
    },
    "type": {
      "type": "string",
      "enum": [
        "HTTPRoute",
        "Ingress"
      ]
    },
    "HTTPRoute": {
      "type": "object",
      "properties": {
        "existingGateways": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name"
            ],
            "properties": {
              "name": { "type": "string" },
              "namespace": { "type": "string" },
              "group": { "type": "string" },
              "kind": { "type": "string" },
              "sectionName": { "type": "string" },
              "port": { "type": "integer" }
            }
          }
        }
      }
    },
    "Ingress": {
      "type": "object",
      "properties": {
        "className": {
          "type": "string"
        },
        "controllerType": {
          "type": "string",
          "enum": [
            "ingress-nginx"
          ]
        }
      }
    },
    "annotations": {
      "type": "object",
      "additionalProperties": {
        "type": [
          "string",
          "null"
        ]
      }
    },
    "host": {
      "type": "string"
    },
    "tlsEnabled": {
      "type": "boolean"
    },
    "tlsSecret": {
      "type": "string"
    },
    "service": {
      "$ref": "file://common/service.json"
    }
  }
}
