{
  "type": "object",
  "required": [
    "host",
    "user",
    "database",
    "password"
  ],
  "properties": {
    "host": {
      "type": "string"
    },
    "port": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535
    },
    "user": {
      "type": "string"
    },
    "database": {
      "type": "string"
    },
    "sslMode": {
      "type": "string",
      "enum": [
        "disable",
        "allow",
        "prefer",
        "require",
        "verify-ca",
        "verify-full"
      ]
    },
    "password": {
      "$ref": "file://./sub_schemas/credential.json"
    }
  }
}
